<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    <variable
        name="restaurante"
        type="com.example.foodforme.showRestaurantes.ShowRestaurantsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBFBFB">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="416dp"
            android:layout_height="36dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="407dp"
            android:layout_height="85dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/advent_pro"
            android:gravity="center"
            android:text="@string/WaterQuote"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="149dp"
            android:layout_height="236dp"
            android:background="@mipmap/history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toEndOf="@+id/btnTimer"
            app:layout_constraintTop_toTopOf="@+id/btnTimer" />

        <Button
            android:id="@+id/btnTimer"
            android:layout_width="149dp"
            android:layout_height="236dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="124dp"
            android:background="@mipmap/timer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTips"
            android:layout_width="149dp"
            android:layout_height="236dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:background="@mipmap/tips"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTimer"
            app:layout_constraintVertical_bias="0.533" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/advent_pro"
            android:gravity="center"
            android:text="@string/Timer"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTimer" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="176dp"
            android:layout_height="43dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/advent_pro"
            android:gravity="center"
            android:text="@string/Tips"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTips" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:fontFamily="@font/advent_pro"
            android:gravity="center"
            android:text="@string/History"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnHistory" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>