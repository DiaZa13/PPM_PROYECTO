<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="fontFamily">@font/advent_pro</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0C0C0C</item>
    </style>

    <style name="SubtitleText">
        <item name="fontFamily">@font/advent_pro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0C0C0C</item>
    </style>

    <style name="NormalText">
        <item name="fontFamily">@font/advent_pro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0C0C0C</item>
    </style>

    <style name="WhiteText" parent="NormalText">
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="WhiteSubtitle" parent="SubtitleText">
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="RedButton">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/advent_pro</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>


    <style name="ClickableText" parent="NormalText">
        <item name="android:textColor">#1730BD</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
